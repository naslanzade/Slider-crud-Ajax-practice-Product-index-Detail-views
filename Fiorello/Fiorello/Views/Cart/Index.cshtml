@model IEnumerable<BasketDetailVM>

@{
    ViewData["Title"] = "Index";

    decimal grandTotal = 0;
}


<div class="container">

    <p class="text-center">Products</p>

    @if (Model.Count() > 0)
    {
        <div class="products">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Count</th>
                        <th scope="col">Price</th>
                        <th scope="col">Total Price</th>
                        <th scope="col">Option</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><img src="~/img/@item.Image" style="width:100px;height:50px" /></td>
                            <td>@item.Name</td>
                            <td>@item.Count</td>
                            <td>@item.Price.ToString("0.####")</td>
                            <td>@item.TotalPrice.ToString("0.####")</td>
                            <td>
                                <form id="basket-delete-form" data-id="@item.Id">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                               
                            </td>
                        </tr>

                        grandTotal += item.TotalPrice;
                    }

                </tbody>
            </table>


            <h3 id="total-price"> Total: @grandTotal.ToString("0.####")</h3>




        </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            No products!
        </div>
    } 

</div>



@section Scripts{
    <script src="~/js/basket.js"></script>
    }


