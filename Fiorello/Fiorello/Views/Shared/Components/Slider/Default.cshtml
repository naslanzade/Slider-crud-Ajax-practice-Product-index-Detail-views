@model SliderVM

<section id="slider">
    <div class="owl-carousel slider">
        @foreach (var slider in Model.Sliders)
        {
            <div> <img src="~/img/@slider.SliderImage" alt=""> </div>
        }

    </div>
    <div class="container context pl-lg-5 ml-lg-3">
        <div class="row">
            <div class="col-lg-5">
                <div class="text">
                    @Html.Raw(Model.SliderInfo.Title)
                    <p class="text-black-50 d-none d-sm-block">@Html.Raw(Model.SliderInfo.Description)</p>
                </div>
                <div class="img">
                    <img src="~/img/@Model.SliderInfo.SignImage" alt="">
                </div>
            </div>
        </div>
    </div>
</section>
