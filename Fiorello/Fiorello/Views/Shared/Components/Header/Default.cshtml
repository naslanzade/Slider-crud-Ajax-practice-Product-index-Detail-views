@model LayoutVM

<header>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav class="navbar navbar-expand-lg d-flex d-lg-block justify-content-between d-xl-flex navbar-light py-3 py-lg-0">
                    <a class="navbar-brand" href="#">
                       <img src="~/img/@Model.SettingDatas["HeaderLogo"]" alt="" id="logo">
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse"
                            data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation" id="mobile-navbar-show">
                        <span class="navbar-toggler-icon" style="font-size: 12px;"></span>
                    </button>

                    <div class="collapse navbar-collapse d-none d-lg-block" id="navbarSupportedContent">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>

                            </li>

                            <li class="nav-item shop-li">
                                <a class="nav-link" asp-controller="Shop" asp-action="Index">Shop</a>

                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Portfolio</a>

                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Blog</a>

                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Contact" asp-action="Index">Contact us</a>

                            </li>
                            <li class="nav-item my-auto search">
                                <i class="fas fa-search" id="search"></i>
                                <ul class="list-unstyled py-3">
                                    <li class="d-flex px-3">
                                        <input id="input-search" type="text" placeholder="Search">
                                        <i class="fas fa-search my-auto" id="search"></i>
                                    </li>

                                </ul>
                            </li>
                            <li class="nav-item my-auto shop-cart">
                                <a asp-controller="Cart" asp-action="Index">
                                    <i class="fas fa-shopping-bag"></i>
                                    <sup class="rounded-circle">@Model.BasketCount</sup>
                                    <span>CART ($0)</span>
                                    <ul class="list-unstyled py-3">
                                        <li class="">No products in the cart.</li>
                                    </ul>
                                </a>

                            </li>
                        </ul>
                    </div>

                </nav>
            </div>
        </div>
        <div class="mobile-navbar position-absolute shadow-lg h-100 p-5">
            <i class="fas fa-times fa-lg" id="mobile-navbar-close"></i>
            <ul class="list-unstyled">
                <li><a asp-controller="Home" asp-action="Index">Home <i class="fas fa-caret-right fa-sm"></i></a></li>
                <li><a href="#">Pages <i class="fas fa-caret-right fa-sm"></i></a></li>
                <li><a asp-controller="Shop" asp-action="Index">Shop <i class="fas fa-caret-right fa-sm"></i></a></li>
                <li><a href="#">Portfolio <i class="fas fa-caret-right fa-sm"></i></a></li>
                <li><a href="#">Blog <i class="fas fa-caret-right fa-sm"></i></a></li>
                <li><a asp-controller="Contact" asp-action="Index">Contact us <i class="fas fa-caret-right fa-sm"></i></a></li>

            </ul>
        </div>
    </div>

</header>